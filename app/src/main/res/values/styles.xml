<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colourAccent</item>
        <item name="colorPrimary">@color/colourPrimary</item>
        <item name="colorPrimaryDark">@color/colourPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- components -->
        <item name="android:dialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="ActionButtonOverflow" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_settings</item>
    </style>

</resources>